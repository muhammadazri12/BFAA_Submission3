<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings">

        <Preference
            android:icon="@drawable/ic_language"
            android:title="@string/language"
            android:summary="@string/change_language">
            <intent
                android:action="android.settings.LOCALE_SETTINGS"/>
        </Preference>

        <SwitchPreference
            android:icon="@drawable/ic_notif"
            android:key="@string/reminder_key"
            android:title="@string/reminder"
            android:summaryOn="@string/reminder_enabled"
            android:summaryOff="@string/reminder_disabled"/>
    </PreferenceCategory>

</PreferenceScreen>